<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fbraun.devicecabinet" >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="11"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".OverViewList"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeviceView"
            android:label="DeviceView"
            android:parentActivityName=".OverViewList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".OverViewList" />
        </activity>
        <activity
            android:name=".CreateDeviceView"
            android:label="CreateDevice"
            android:parentActivityName=".OverViewList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".OverViewList" />
        </activity>
        <activity
            android:name=".CreatePersonView"
            android:label="Create Person"
            android:parentActivityName=".OverViewList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".OverViewList" />
        </activity>
        <activity
            android:name=".PersonList"
            android:label="List of Persons"
            android:parentActivityName=".DeviceView" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DeviceView" />
        </activity>
    </application>

</manifest>
