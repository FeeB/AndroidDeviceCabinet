<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:background="#ffffff">

    <TextView
        android:layout_marginTop="31dp"
        android:layout_marginLeft="34dp"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/first_name_label"
        android:text="First Name"
        android:textSize="17sp"
        android:layout_marginStart="34dp"
        android:gravity="right"/>

    <EditText
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:id="@+id/first_name_text"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:hint="First Name"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/first_name_label"
        android:layout_toRightOf="@+id/first_name_label"
        android:layout_toEndOf="@+id/first_name_label"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <TextView
        android:layout_marginTop="80dp"
        android:layout_marginLeft="34dp"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/last_name_label"
        android:text="Last Name"
        android:textSize="17sp"
        android:layout_marginStart="34dp"
        android:gravity="right"/>

    <EditText
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:id="@+id/last_name_text"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:hint="Last Name"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/last_name_label"
        android:layout_toRightOf="@+id/last_name_label"
        android:layout_toEndOf="@+id/last_name_label"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <Button
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save_person_button"
        android:layout_below="@+id/last_name_text"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="100dp"
        android:layout_centerInParent="true"
        android:onClick="storePerson"/>

</RelativeLayout>