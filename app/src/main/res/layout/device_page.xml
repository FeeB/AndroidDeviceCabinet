<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:theme="@style/AppTheme"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/imageDeviceView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/deviceNameDeviceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/imageDeviceView"
        android:text="Device"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/systemImageViewDeviceView"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/imageDeviceView"
        android:src="@drawable/ic_launcher"
        android:layout_alignTop="@+id/systemVersionDeviceView" />

    <TextView
        android:id="@+id/systemVersionDeviceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/systemImageViewDeviceView"
        android:text="System"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/personImageDeviceView"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_launcher"
        android:layout_marginLeft="23dp"
        android:layout_alignTop="@+id/personDeviceView"
        android:layout_toRightOf="@+id/imageDeviceView"/>

    <TextView
        android:id="@+id/personDeviceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/systemImageViewDeviceView"
        android:textSize="14sp" />

    <Button
        android:layout_width="113dp"
        android:layout_height="40dp"
        android:layout_marginLeft="23dp"
        android:text="Book"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/imageDeviceView"
        android:layout_marginTop="100dp"
        android:id="@+id/button"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_below="@+id/button"
        android:layout_marginTop="21dp"
        android:background="#EFEFF4">

        <TextView
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:text="Category"
            android:id="@+id/typeDeviceView"
            android:textColor="#666666"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:gravity="right"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="text"
            android:id="@+id/typeTextDeviceView"
            android:layout_gravity="center|top"
            android:textColor="#666666"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:text="Model"
            android:id="@+id/modelDeviceView"
            android:layout_gravity="left|bottom"
            android:textColor="#666666"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:gravity="right"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="text"
            android:id="@+id/modelTextDeviceView"
            android:layout_gravity="center|bottom"
            android:textColor="#666666"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="70dp"/>
    </FrameLayout>

</RelativeLayout>