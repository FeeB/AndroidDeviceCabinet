<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:theme="@style/AppTheme"
    android:background="#ffffff">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image_device_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/placeholder"/>

    <Button
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginLeft="23dp"
        android:text="@string/change_picture"
        android:textSize="10sp"
        android:layout_below="@+id/image_device_view"
        android:id="@+id/change_picture_button"/>

    <TextView
        android:id="@+id/device_name_label_in_device_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/image_device_view"
        android:text="@string/device"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/system_icon_image_view_in_device_activity"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/image_device_view"
        android:src="@drawable/ic_launcher"
        android:layout_alignTop="@+id/system_version_label_in_device_view" />

    <TextView
        android:id="@+id/system_version_label_in_device_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="5px"
        android:layout_toRightOf="@+id/system_icon_image_view_in_device_activity"
        android:text="@string/system"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/person_icon_in_device_activity"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/user"
        android:layout_marginLeft="23dp"
        android:layout_alignTop="@+id/person_name_in_device_view"
        android:layout_toRightOf="@+id/image_device_view"/>

    <TextView
        android:id="@+id/person_name_in_device_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="5px"
        android:layout_toRightOf="@+id/system_icon_image_view_in_device_activity"
        android:textSize="14sp" />

    <Button
        android:layout_width="113dp"
        android:layout_height="40dp"
        android:layout_marginLeft="23dp"
        android:text="@string/book"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/image_device_view"
        android:layout_marginTop="100dp"
        android:id="@+id/book_return_button"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_below="@+id/book_return_button"
        android:layout_marginTop="21dp"
        android:background="#EFEFF4">

        <TextView
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:text="Category"
            android:id="@+id/type_label_in_device_view"
            android:textColor="#666666"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:gravity="right"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/type_text_in_device_view"
            android:layout_gravity="center|top"
            android:textColor="#666666"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:text="@string/model"
            android:id="@+id/model_label_in_device_view"
            android:layout_gravity="left|bottom"
            android:textColor="#666666"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:gravity="right"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/model_text_in_device_view"
            android:layout_gravity="center|bottom"
            android:textColor="#666666"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="70dp"/>
    </FrameLayout>

</RelativeLayout>