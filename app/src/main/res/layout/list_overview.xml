<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme">


                <com.example.fbraun.devicecabinet.CircledNetworkImageView
                    android:id="@+id/device_image_in_overview_list"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/placeholder"/>

                <TextView
                    android:id="@+id/device_name_label_in_overview_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginLeft="23dp"
                    android:layout_toRightOf="@+id/device_image_in_overview_list"
                    android:text="@string/device"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/device_type_in_overview_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/device_image_in_overview_list"
                    android:text="@string/device_type"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/system_icon_image_view_in_overview_activity"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_launcher"
                    android:layout_alignTop="@+id/system_in_overview_activity"
                    android:layout_alignLeft="@+id/device_type_in_overview_activity"
                    android:layout_alignStart="@+id/device_type_in_overview_activity"
                    android:layout_above="@+id/person_icon_in_overview_activity" />

                <TextView
                    android:id="@+id/system_in_overview_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="5px"
                    android:layout_toRightOf="@+id/system_icon_image_view_in_overview_activity"
                    android:layout_toEndOf="@+id/system_icon_image_view_in_overview_activity"
                    android:text="@string/system"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/person_icon_in_overview_activity"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignLeft="@+id/system_icon_image_view_in_overview_activity"
                    android:layout_alignStart="@+id/system_icon_image_view_in_overview_activity"
                    android:layout_alignBottom="@+id/person_name_in_overview_activity"
                    android:layout_below="@+id/system_in_overview_activity" />


                <TextView
                    android:id="@+id/person_name_in_overview_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:text="@string/person"
                    android:textSize="14sp"
                    android:layout_marginLeft="5px"
                    android:layout_below="@+id/system_in_overview_activity"
                    android:layout_toRightOf="@+id/person_icon_in_overview_activity"
                    android:layout_toEndOf="@+id/person_icon_in_overview_activity"/>

                <ImageView
                    android:id="@+id/trash_icon_in_overview_activity"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/system_in_overview_activity"
                    android:layout_marginLeft="600px"
                    android:src="@drawable/trash"
                    android:clickable="true"/>

</RelativeLayout>